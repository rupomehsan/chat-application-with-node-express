      function logout() {
        let conf = confirm("Are you sure you want to logout?");
        if (!conf) return;
        fetch("/logout", {
          method: "DELETE",
        });
        logoutToast.showToast();
        setTimeout(() => {
          window.location.replace("/");
        }, 1000);
      }
