  <body>
    <script>
      // toast
      const logoutToast = Toastify({
        text: "You are being logged out...",
        duration: 1000,
      });

      function logout() {
        fetch("/", {
          method: "DELETE",
        });
        logoutToast.showToast();
        setTimeout(() => {
          window.location.replace("/");
        }, 1000);
      }
    </script>
  </body>
